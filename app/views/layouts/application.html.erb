<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= auto_discovery_link_tag(:rss) %>
</head>
<body>
  
  <div id="sidebar">
    <p>Menu</p>
    <ul>
      <li><%= link_to "All Articles", articles_path %></li>
      <li><%= link_to "All Tags", tags_path %></li>
      <li><%= link_to "Articles by Month", articles_path(anchor: "months") %></li>
    </ul>


  </div>
  
  <div id="container">
    <div id="content">
      <%= yield %>
      <hr>
      <h6>
        <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to "(logout)", logout_path %>
        <% else %>
          <%= link_to "(login)", login_path %>
        <% end %>
      </h6>
    </div>
  </div>
</body>
</html>
